<!DOCTYPE html>
<html>
  <head>
    <title>Litter//Splitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Litter//Splitter", '/cats', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   '/cats' %></li>
            <li><%= link_to "Sign Up",   '/litter/signup' %></li>
            <li><%= link_to "Log in", '/litter' %></li>
            <li><%= link_to "Log out", '/logout' %></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>

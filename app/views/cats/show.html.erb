<h1><%=@cat.name %>'s Page!</h1>
<br>
My name: <%=@cat.name %>
<br>
My owner: <%= @cat.user.name %>
<br>
About me: <%=@cat.description %>
<br>
This is me! <br>
<img  src="<%= @cat.img_url %>" width=300px >

<p>Adopt me! </p>
<%=form_for @cat do |f| %>
<%= f.label "Owner" %>
<%= f.collection_select :user_id, User.all, :id, :name %>
<%= f.submit "Adopt!" %>
<% end %>


<%= button_to "Logout", '/logout', method: "delete" %>
<%= button_to "Home", litter_path, method: "get"%>
